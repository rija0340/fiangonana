{% extends 'baseAdminLTE.html.twig' %}
{% block title %}Filadelfia
{% endblock %}
{% block stylesheets %}
	<!-- DataTables -->
	<link rel="stylesheet" href="{{asset('adminlte3/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css')}}">
	<link rel="stylesheet" href="{{asset('adminlte3/plugins/datatables-responsive/css/responsive.bootstrap4.min.css')}}">
	<link rel="stylesheet" href="{{asset('adminlte3/plugins/datatables-buttons/css/buttons.bootstrap4.min.css')}}">
	<link rel="stylesheet" href="{{asset('adminlte3/plugins/bootstrap4-duallistbox/bootstrap-duallistbox.min.css')}}">
{% endblock %}
{% block title_page %}Ajout mambra kilasy
	{{kilasy.nom}}
	({{kilasy.kilasyLasitra.trancheAge}})

{% endblock %}
{% block current_page %}liste
{% endblock %}

{% block content %}

	<div class="row">
		<div class="col-lg-9">
			<form
				method="post" action="{{path('kilasy_ajout_mambra',{id : kilasy.id})}}">


				<!-- Main content -->
				<section class="content">
					<div class="container-fluid">
						<div class="row">
							<div class="col-12">
								<div class="card">
									<div class="card-header">
										<h3 class="card-title">
											<a href="{{path('kilasy_show', {id: kilasy.id})}}" class="btn btn-outline-secondary">Détails kilasy</a>
										</h3>
									</div>
									<!-- /.card-header -->
									<div class="card-body">
										<table id="example2" class="table table-bordered table-hover">
											<thead>
												<tr>
													<th>Nom</th>
													<th>Prenom</th>
													<th>Baptisé</th>
													<th>tranche_age</th>
													<th>Ajout</th>
													<th>Andraikitra</th>
												</tr>
											</thead>
											<tbody>
												{% for mambra in possibleMambra %}

													<tr>
														<td>{{mambra.nom}}</td>
														<td>{{mambra.prenom}}</td>
														<td>
															{% if mambra.baptise %}
																<span class="badge badge-success">Oui</span>
															{% else %}
																<span class="badge badge-danger">Non</span>
															{% endif %}
														</td>
														<td>
															{{mambra.trancheAge}}
														</td>
														<td>
															<div class="form-group clearfix">
																<div class="icheck-primary d-inline">
																	<input type="checkbox" id="{{mambra.id}}_ajout" name="ajout[]" value="{{mambra.id}}">
																	<label for="{{mambra.id}}_ajout"></label>
																</div>

															</div>
														</td>
														<td>
															<div class="form-group clearfix">
																<div class="icheck-primary d-inline">
																	<input type="radio" id="{{mambra.id}}_radio3" name="{{mambra.id}}_andr" checked="" value="tsotra">
																	<label for="{{mambra.id}}_radio3" class="text-primary">Tsotra</label>
																</div>
																<div class="icheck-danger d-inline">
																	<input type="radio" id="{{mambra.id}}_radio" name="{{mambra.id}}_andr" value="prof">
																	<label for="{{mambra.id}}_radio" class="text-danger">
																		Mpampianatra</label>
																</div>
																<div class="icheck-success d-inline">
																	<input type="radio" id="{{mambra.id}}_radio2" name="{{mambra.id}}_andr" value="anim">
																	<label for="{{mambra.id}}_radio2" class="text-success">Mpanentana</label>
																</div>
															</div>
														</td>

													</tr>
												{% endfor %}
											</tbody>
											<tfoot>
												<tr>
													<th>Rendering engine</th>
													<th>Browser</th>
													<th>Platform(s)</th>
													<th>Engine version</th>
													<th>CSS grade</th>
												</tr>
											</tfoot>
										</table>
									</div>
									<!-- /.card-body -->
								</div>

							</div>
							<!-- /.col -->
						</div>
						<!-- /.row -->
					</div>
					<!-- /.container-fluid -->
				</section>
				<!-- /.content -->
				<button type="submit" class="btn btn-success">Ok</button>
			</form>
		</div>
		<div class="col-lg-3">
			<div
				class="card card-widget widget-user-2">
				<!-- Add the bg color to the header using any of the bg-* classes -->
				<div class="widget-user-header bg-warning">

					<!-- /.widget-user-image -->
					{# <h3 class="widget-user-username">Ireo efa</h3> #}
						<h5 class="widget-user-desc"> Informations
					</h5>
				</div>
				<div class="card-footer p-0">
					<ul class="nav flex-column">
						<li class="nav-item">
							<a href="#" class="nav-link">
								Isan'ny mambra kilsy
								<span class="float-right badge bg-primary">{{mambraKilasy|length}}</span>
							</a>
						</li>
						<li class="nav-item">
							<a href="#" class="nav-link">
								Isan'ny mambra tsy
								{{kilasy.nom}}
								<span class="float-right badge bg-primary">{{possibleMambra|length}}</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

