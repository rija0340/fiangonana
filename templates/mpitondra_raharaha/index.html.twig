						<tr>
							<th></th>
							{% for key,mois in structure %}

								{% for i in 1..structure[key]|length  %}
									<th>{{key}}</th>

								{% endfor %}

							{% endfor %}
						</tr>

					</thead>
					<tbody>

						<tr>
							<td>Dates</td>
							{% set separator = "-" %}
							{% set concatenatedDays = [] %}
							{% set parts = [] %}
							{% for key,mois in structure %}
								{% for key2,week in structure[key] %}
									<td colspan="">
										{% for date in mois[key2] %}

