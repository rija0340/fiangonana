													{% if key == 'date' %}
														{% set parts = value|split(separator) %}

													{% endif %}
												{% endfor %}

												{% if parts[2] is defined %}
													{% set day = parts[2] %}
													{# Extract the day part from the date #}
													{% set concatenatedDays = concatenatedDays|merge([day]) %}
												{% endif %}
